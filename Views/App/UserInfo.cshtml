@{
    Layout = "_LayoutHomePage";
}
@model IEnumerable<StoreUser>
<div class="container">
    <h4 class="text-center mb-4 mt-4">Danh sách nhà tuyển dụng</h4>
   
    <div class="table-responsive">
        <table class="table table-striped table-borderless ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.LastName @user.FirstName</td>
                        <td>@user.Email</td>
                        <td>
                            <form asp-controller="Account" asp-action="DeleteUserById" asp-route-id="@user.Id" method="post">
                                <input name="userId" value="@user.Id" type="hidden" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
